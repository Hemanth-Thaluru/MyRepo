@model IEnumerable<CustomerMicroService.Model.Loan>


@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<!DOCTYPE html>

<html>

<body class="">
    <table style="width:100%" class="table table-bordered table-hover">
        <thead style="background-color: #2b6dad" class="text-white">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.CustomerId)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Loan_Id)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GoldWeight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
    <tr>

        <td>
            <a asp-controller="CustomerDetails" asp-action="Index" >
                @Html.DisplayFor(modelItem => item.CustomerId)
            </a>
        </td>
        <td>
            <a asp-controller="GetAccount" >
                @Html.DisplayFor(modelItem => item.Loan_Id)
            </a>
        </td>
        <td>
            <a asp-controller="CustomerDetails" asp-action="Index" >
                @Html.DisplayFor(modelItem => item.GoldWeight)
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
       


    </tr>}
        </tbody>
    </table>
</body>
</html>
